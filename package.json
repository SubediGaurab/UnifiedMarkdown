{
  "name": "unified-markdown",
  "version": "0.3.0",
  "description": "AI-powered CLI tool to convert images, PDFs, DOCX, and PPTX to Markdown using Google Gemini",
  "type": "module",
  "main": "dist/cli/cli.js",
  "bin": {
    "umd": "dist/cli/cli.js"
  },
  "files": [
    "dist",
    ".claude/skills",
    "scripts/postinstall.js",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && npm run build:ui",
    "build:core": "tsc",
    "build:ui": "cd orchestrator/ui/client && npm run build",
    "link": "npm run build && chmod +x dist/cli/cli.js && npm link",
    "unlink": "npm unlink -g unified-markdown",
    "lint": "eslint core/**/*.ts cli/**/*.ts orchestrator/**/*.ts",
    "lint:fix": "eslint core/**/*.ts cli/**/*.ts orchestrator/**/*.ts --fix",
    "format": "prettier --write \"core/**/*.ts\" \"cli/**/*.ts\" \"orchestrator/**/*.ts\"",
    "format:check": "prettier --check \"core/**/*.ts\" \"cli/**/*.ts\" \"orchestrator/**/*.ts\"",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "postinstall": "node scripts/postinstall.js",
    "install-skills": "node scripts/postinstall.js"
  },
  "keywords": [
    "markdown",
    "converter",
    "cli",
    "ocr",
    "gemini",
    "ai",
    "pdf",
    "image",
    "docx",
    "word",
    "pptx",
    "powerpoint",
    "pdf-to-markdown",
    "image-to-markdown",
    "docx-to-markdown",
    "pptx-to-markdown",
    "presentation-converter",
    "document-converter"
  ],
  "author": "Gaurab Subedi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SubediGaurab/UnifiedMarkdown.git"
  },
  "bugs": {
    "url": "https://github.com/SubediGaurab/UnifiedMarkdown/issues"
  },
  "homepage": "https://github.com/SubediGaurab/UnifiedMarkdown#readme",
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@inquirer/prompts": "^7.2.0",
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "cross-spawn": "^7.0.6",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "mammoth": "^1.11.0",
    "ora": "^8.1.1",
    "sharp": "^0.33.5",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
