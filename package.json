{
  "name": "unified-markdown",
  "version": "0.1.0",
  "description": "AI-powered CLI tool to convert images and PDFs to Markdown using Google Gemini",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "umd": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "link": "npm run build && chmod +x dist/cli.js && npm link",
    "unlink": "npm unlink -g unified-markdown",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "markdown",
    "converter",
    "cli",
    "ocr",
    "gemini",
    "ai",
    "pdf",
    "image",
    "pdf-to-markdown",
    "image-to-markdown",
    "document-converter"
  ],
  "author": "Gaurab Subedi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SubediGaurab/UnifiedMarkdown.git"
  },
  "bugs": {
    "url": "https://github.com/SubediGaurab/UnifiedMarkdown/issues"
  },
  "homepage": "https://github.com/SubediGaurab/UnifiedMarkdown#readme",
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@inquirer/prompts": "^7.2.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "ora": "^8.1.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}